{
  "name": "Uverse",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "build": {
    "appId": "com.uverse.app",
    "productName": "Uverse",
    "copyright": "Copyright Â© 2024 Uverse",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/uverse-backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/**/*",
          "!*.pyc"
        ]
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "portable"
      ],
      "publisherName": "Uverse",
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json && npm run rename:electron",
    "rename:electron": "node scripts/rename-electron.js",
    "electron:dev": "npm run build && npm run build:electron && electron dist-electron/main.cjs",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "electron:build:mac": "cd .. && ./scripts/build-and-install-mac.sh",
    "electron:build:win": "npm run build && npm run build:electron && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
