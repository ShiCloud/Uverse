PYTHONIOENCODING=utf-8

# ==========================================
# 知识库后端环境配置
# ==========================================

# ------------------------------------------
# 数据库配置
# ------------------------------------------

USE_EMBEDDED_PG=true

DATABASE_HOST=localhost
DATABASE_PORT=15432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=knowledge_base

# ------------------------------------------
# OpenAI API 配置
# ------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here

# ------------------------------------------
# 服务配置
# ------------------------------------------
DEBUG=false
PORT=8000
SHOW_LOADING=true
APP_VERSION=0.1.0

# ------------------------------------------
# 数据目录配置
# ------------------------------------------

# PostgreSQL 目录（相对路径或绝对路径）
POSTGRES_DIR=postgres

# 存储服务目录
STORE_DIR=store

# AI 模型目录
MODELS_DIR=models

# 临时文件目录
TEMP_DIR=out

# ------------------------------------------
# 日志配置
# ------------------------------------------
LOG_LEVEL=INFO

# ------------------------------------------
# MinerU PDF 解析配置
# ------------------------------------------
MINERU_BACKEND=pipeline
MINERU_DEVICE=cpu
MINERU_VRAM=1024
MINERU_VIRTUAL_VRAM_SIZE=1
MINERU_OUTPUT_DIR=out
